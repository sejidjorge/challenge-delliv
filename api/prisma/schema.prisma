generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING // pedido pendente
  DELIVERED // pedido entregue
  ONROUTE // pedido em rota de entrega
  OCCURRENCE // ocorreu um erro com o pedido
  RETURNED // pedido devolvido
  CANCELED // pedido cancelado
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String
  role         Role     @default(USER)
  address      String
  passwordHash String
  createdAt    DateTime
  updatedAt    DateTime
  Order        Order[]

  @@unique([id, name, address])
}

model Order {
  id                    String   @id @default(uuid())
  createdAt             DateTime
  updatedAt             DateTime
  estimatedDeliveryDate DateTime
  user                  User     @relation(fields: [userId, userName, deliveryAddress], references: [id, name, address])
  userId                String
  userName              String
  deliveryAddress       String
  trackingCode          String
  status                Status   @default(PENDING)
}
